                {
                    <option value="1" selected>1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                }
                else if (Model.CanCuartos_C == 2)
                {
                    <option value="1">1</option>
                    <option value="2" selected>2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                }
                else if (Model.CanCuartos_C == 3)
                {
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3" selected>3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                }
                else if (Model.CanCuartos_C == 4)
                {
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4" selected>4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                }
                else if (Model.CanCuartos_C == 5)
                {
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5" selected>5</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                }
                else if (Model.CanCuartos_C == 6)
                {


                    <option value="1">1</option>


                    <option value="2">2</option>


                    <option value="3">3</option>


                    <option value="4">4</option>


                    <option value="5">5</option>


                    <option value="6">6</option>


                    <option value="6" selected>6</option>
                }
                else
                {
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                }
            </select>
        </div>
        <div class="col-lg-3 offset-lg-1 mt-lg-3 form-group" id="CanBanos_C">
            <label>Cantidad de Baños</label>
            <select class="form-control" name="CanBanos_C">
                <option value="">Seleccione la cantidad</option>
                @if (Model.CanBanos_C == 1)
                {
                    <option value="1" selected>1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                }
                else if (Model.CanBanos_C == 2)
                {
                    <option value="1">1</option>
                    <option value="2" selected>2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                }
                else if (Model.CanBanos_C == 3)
                {
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3" selected>3</option>
                    <option value="4">4</option>
                }
                else if (Model.CanBanos_C == 4)
                {
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4" selected>4</option>
                }
                else
                {
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>

                }
            </select>
        </div>

        <div class="col-lg-4 mt-3  form-group " id="CanGarage_C">
            <label>Cantidad de Garajes</label>
            <select class="form-control" name="CanGarage_C">
                <option value="">Seleccione la cantidad</option>
                @if (Model.CanGarage_C == 1)
                {
                    <option value="1" selected>1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                }
                else if (Model.CanGarage_C == 2)
                {
                    <option value="1">1</option>
                    <option value="2" selected>2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                }
                else if (Model.CanGarage_C == 3)
                {
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3" selected>3</option>
                    <option value="4">4</option>
                }
                else if (Model.CanGarage_C == 4)
                {
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4" selected>4</option>
                }
                else
                {
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>

                }
            </select>
        </div>
        <div class="col-lg-3 mt-lg-3  form-group">
            <label>Prioridad de la propiedad</label>
            <select class="form-control" name="IdPrioridad_Pri">
                <option>Seleccione una Prioridad</option>
                @{ foreach (BienesRaices.Models.MuestraPrioridad_Result Prioridad in this.ViewBag.CargarPrioridad)
                    {
                        bool repeat = Prioridad.IdPrioridad_Pri == Model.IdPrioridad_Pri;
                        if (repeat)
                        {
                            <option value="@Prioridad.IdPrioridad_Pri" selected>@Prioridad.Nombre_Pri</option>
                        }
                        else
                        {
                            <option value="@Prioridad.IdPrioridad_Pri">@Prioridad.Nombre_Pri</option>
                        }
                    } }
            </select>
        </div>


        <div class="col-lg-3 mt-lg-2 offset-lg-1 form-group">
            <label for="provincias">Provincia</label>
            <select required class="form-control" id="provincias" name="Id_Provincia_L" onchange="getCantones(this.value);">
            </select>
        </div>
        <div class="col-lg-4 mt-lg-2  form-group canton">
            <label for="cantones">Cantón</label>
            <select required class="form-control" id="cantones" name="Id_Canton_L" onchange="getDistritos(this.value);">
            </select>
        </div>
        <div class="col-lg-4 mt-lg-2 form-group distrito">
            <label for="distritos">Distrito</label>
            <select required class="form-control" id="distritos" name="Id_Distrito_L"></select>
        </div>

        @if (Model.Estado_P == "Apartado")
        {


            <div class="col-lg-3 mt-5 offset-lg-1 form-check">
                <input class="form-check-input" name="Apartado" type="checkbox" value="" onchange="apartado()" id="checkbox1" checked>
                <label class="form-check-label" for="flexCheckDefault">
                    Apartado
                </label>
            </div>
        }
        else
        {
            <div class="col-lg-3 mt-5 offset-lg-1 form-check">
                <input class="form-check-input" name="Apartado" type="checkbox" value="@Model.Apartado" onchange="apartado()" id="checkbox1">
                <label class="form-check-label" for="flexCheckDefault">
                    Apartado
                </label>
            </div>
        }
    </div>

    <div class="row">


        <div class="col-lg-3 mt-3 offset-lg-3 form-group">
            <label for="">Metros Cuadrados de la propiedad</label>
            <input type="number" class="form-control" autocomplete="off" name="MetrosCuadradosLote_C" value="@Model.MetrosCuadradosLote_C" placeholder="Ingrese la Cantidad" />
        </div>
        <div class="col-lg-3 mt-lg-3 form-group" id="MetrosCuadradosCasa_C">
            <label for="">Metros Cuadrados de la casa</label>
            <input type="number" class="form-control" autocomplete="off" name="MetrosCuadradosCasa_C" value="@Model.MetrosCuadradosCasa_C" placeholder="Ingrese la Cantidad" />
        </div>

    </div>

    <div class="row">

        <div class="col-lg-3 mt-lg-3 offset-lg-3  form-group">
            <label for="">Dirección Exacta de la Propiedad</label>
            <div class="md-form">
                <textarea name="DireccionExacta_L" class="md-textarea form-control" rows="3" >@Model.DireccionExacta_L</textarea>
            </div>
        </div>
        <div class="col-lg-3 mt-lg-3 form-group">
            <label for="">Descripción de la Propiedad</label>
            <div class="md-form">
                <textarea name="Descripcion_P" class="md-textarea form-control"  rows="3">@Model.Descripcion_P</textarea>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-lg-5  mt-lg-2 offset-lg-5">
            <input class="btn btn-secondary" type="submit" name="name" value="Cargar" />
        </div>
    </div>



    @if (Model.NombreProvincia_L == "" || Model.NombreProvincia_L == null)
    {

    }
    <input type="hidden" name="hddProvincia" id="hdProvinciaID" value="@Model.NombreProvincia_L" />
    <input type="hidden" name="hddCantonID" id="hdCantonID" value="@Model.NombreCanton_L" />
    <input type="hidden" name="hddDistritoID" id="hdDistritoID" value="@Model.NombreDistrito_L" />
    <input type="hidden" name="hddProvincia" id="hddProvinciaID" value="@Model.Id_Provincia_L" />
    <input type="hidden" name="hddCantonID" id="hddCantonID" value="@Model.Id_Canton_L" />
    <input type="hidden" name="hddDistritoID" id="hddDistritoID" value="@Model.Id_Distrito_L" />
    <input type="text" hidden name="NombreProvincia_L" id="1" value="" />
    <input type="text" hidden name="NombreCanton_L" id="2" value="" />
    <input type="text" hidden name="NombreDistrito_L" id="3" value="" />

</form>
<div class="row justify-content-center mt-5 mb-3">
    <div class="col-lg-3"><button data-bs-toggle="modal" class="btn btn-info" data-bs-target="#exampleModal">Mostrar Imagenes</button></div>
    <div class="col-lg-3"><button data-bs-toggle="modal" class="btn btn-light" data-bs-target="#exampleModal1">Agregar Imagenes</button></div>
    <div class="col-lg-3"> <button data-bs-toggle="modal" class="btn btn-success" data-bs-target="#exampleModal2">Vender Propiedad</button></div>
    
    
   
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">


                    @{ foreach (BienesRaices.Models.AgregarImagenes_Result posicion in this.ViewBag.CargarImagenes)
                        {

                            <div class="card col-lg-6">
                                <div class="card-body" style="text-align:center">
                                    <img src="~/images/@posicion.Ruta_I" width="100%" />

                                    @using (Html.BeginForm("EliminarImagen", "Propiedad", FormMethod.Post))
                                    {
                                        <button id="Con" type="submit" name="Id_Imagen_I" value="@posicion.Id_Imagen_I" class="btn btn-info">Eliminar Imagen</button>
                                        <input type="text" name="idPropiedad" value="@posicion.Id_Propiedad_I" hidden>
                                    }

                                </div>
                            </div> } }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Imagenes</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @using (Html.BeginForm("agregarImagen", "Propiedad", FormMethod.Post,
                  new { enctype = "multipart/form-data" }))
            {
                <div class="modal-body">

                    <div class="col-lg-2  form-group">

                        <label>Cargar Imagen</label>
                        <input class="form-control-file border" type="file" multiple id="Ruta_I" name="Ruta_I" required />

                    </div>

                </div>
                <div class="modal-footer">


                    <button id="Con" type="submit" name="idpropiedad" value="@Model.Id_Propiedad_P" class="btn btn-info">Agregar Imagen</button>

                </div>
            }
        </div>
    </div>
</div>
<div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Vender Propiedad</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @using (Html.BeginForm("venderPropiedad", "Propiedad", FormMethod.Post))
            {
                <div class="modal-body">

                    <div class="form-group">
                        <div class="form-group">
                            <label for="">Nombre Completo</label>
                            <input type="text" class="form-control" autocomplete="off" name="NombreCompleto_CO" value="" placeholder="Ingrese su nombre completo" />
                        </div>
                        <div class="form-group">
                            <label for="">Teléfono</label>
                            <input type="text" class="form-control" name="Telefono_CO" value="" placeholder="Ingrese su teléfono" />
                        </div>
                        <div class="form-group">
                            <label for="">Correo Electronico</label>
                            <input type="email" class="form-control" name="Correo_CO" value="" placeholder="Ingrese su correo Electronico " />
                        </div>
                        <div class="form-group">
                            <label for="">Comentarios</label>
                            <br />
                            <textarea class="form-control" name="Comentario_CO" rows="4"></textarea>
                        </div>
                        <br />



                    </div>

                </div>
                <div class="modal-footer">


                    <button type="submit" value="@Model.Id_Propiedad_P" class="btn btn-info" name="idPropiedad">Vender Propiedad</button>

                </div>
            }
        </div>
    </div>
</div>
