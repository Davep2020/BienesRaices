@model BienesRaices.Models.MostrarPropiedadID_Result
@{ ViewBag.Title = "ModificarPropiedad";
    Layout = "~/Views/Shared/_LayoutPropiedad.cshtml"; }


<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js" type="text/javascript"></script>
<script src="~/Scripts/ModificaPropiedad.js"></script>


<form method="post">
    <div class="row">
        <div class="col-lg-3 mt-3  offset-lg-1 form-group">
            <label>Categoria de la propiedad</label>
            <select class="form-control" name="Id_Categoria_P" id="Id_Categoria_P" onChange="mostrar(this.value);">
                <option>Seleccione una categoria</option>
                @{ foreach (BienesRaices.Models.MostrarCategoria_Result Categoria in this.ViewBag.CargarCategoria)
                    {
                        bool repeat = Categoria.Id_Categoria_CA == Model.Id_Categoria_CA;
                        var idcate = Categoria.Id_Categoria_CA;
                        if (repeat)
                        {
                            <option value="@Categoria.Id_Categoria_CA" selected>@Categoria.Nombre_CA</option>
                        }
                        else
                        {
                            <option value="@Categoria.Id_Categoria_CA">@Categoria.Nombre_CA</option>
                        }
                    } }
            </select>
        </div>
        <div class="col-lg-4 mt-lg-3 form-group">
            <label for="">Nombre de la propiedad</label>
            <input type="text" class="form-control" name="Nombre_P" value="@Model.Nombre_P" placeholder="Ingrese el nombre de la propiedad" />
        </div>
        <div class="col-lg-3 mt-lg-3 form-group" id="TipoMoneda_P">
            <label>Tipo Moneda</label>
            <select class="form-control" name="TipoMoneda_P">
                @if (Model.TipoMoneda_P == "$")
                {
                    <option value="$" selected>Dolares</option>
                    <option value="¢">Colones</option>
                }
                else
                {
                    <option value="$">Dolares</option>
                    <option value="¢" selected>Colones</option>
                }
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 mt-3 offset-lg-1 form-group">
            <label for="">Precio de la Propiedad</label>
            <input type="text" class="form-control" name="Precio" value="@Model.Precio" placeholder="Ingrese el Precio de la Propiedad" />
        </div>

        <div class="col-lg-4  mt-3 form-group">
            <label for="">Nuevo Precio de la Propiedad</label>
            <input type="text" class="form-control" name="PrecioA" value="@Model.PrecioA" placeholder="Ingrese el Precio de la Propiedad" />
        </div>
        <div class="col-lg-3   mt-lg-3 form-group" id="CanCuartos_C">
            <label>Cantidad de Habitaciones</label>
            <select class="form-control" name="CanCuartos_C">
                <option value="">Seleccione la cantidad</option>
