
@{
    ViewBag.Title = "Propiedades";
    Layout = "~/Views/Shared/_LayoutPropiedad.cshtml";
}
@using (Html.BeginForm("Propiedades", "Propiedad", FormMethod.Post,
                    new { enctype = "multipart/form-data" }))
{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js" type="text/javascript"></script>
    <script src="~/Scripts/ApiProvincias.js"></script>
    <style>
        .canton,
        .distrito {
            display: none;
        }
    </style>
    <div class="row">
        <div class="col-lg-3 form-group">
            <label for="">Nombre de la propiedad</label>
            <input type="text" class="form-control" autocomplete="off" name="Nombre_P" value="" placeholder="Ingrese el nombre de la propiedad" />
        </div>
        <div class="col-lg-3 form-group">
            <label for="">Precio de la Propiedad</label>
            <input type="number" class="form-control" name="Precio"  autocomplete="off" value="" placeholder="Ingrese el Precio de la Propiedad" />
        </div>
        <div class="col-lg-3 form-group"  id="CanCuartos_C">
            <label>Cantidad de Cuartos</label>
            <select class="form-control" name="CanCuartos_C">
                <option value="">Seleccione la cantidad</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
            </select>
        </div>
        <div class="col-lg-3 form-group" id="CanBanos_C">
            <label>Cantidad de Baños</label>
            <select class="form-control"  name="CanBanos_C">
                <option value="">Seleccione la cantidad</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 form-group " id="CanGarage_C">
            <label>Cantidad de Garajes</label>
            <select class="form-control" name="CanGarage_C" >
                <option value="">Seleccione la cantidad</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
        </div>
        <div class="col-lg-2 offset-lg-1 form-group">
            <label>Cargar Imagen</label>
            <input class="form-control-file border"  type="file" multiple id="Ruta_I" name="Ruta_I" />
        </div>
        <div class="col-lg-3 offset-lg-3 form-group">
            <label>Categoria de la propiedad</label>
            <select class="form-control" name="Id_Categoria_P" id="Id_Categoria_P" onChange="mostrar(this.value);">
                <option>Seleccione una categoria</option>
                @{
                    foreach (BienesRaices.Models.MostrarCategoria_Result Categoria in this.ViewBag.CargarCategoria)
                    {
                        <option value="@Categoria.Id_Categoria_CA">@Categoria.Nombre_CA</option>
                    }


                }
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 form-group">
            <label for="">Descripción de la propiedad</label>
            <input type="text" class="form-control"  autocomplete="off" name="Descripcion_P" value="" placeholder="Ingrese la descripción de la propiedad" />
        </div>
        <div class="col-lg-3 form-group">
            <label for="provincias">Provincia</label>
            <select class="form-control" id="provincias" name="Id_Provincia_L" onchange="getCantones(this.value);">
            </select>
        </div>
        <div class="col-lg-3 form-group canton">
            <label for="cantones">Cantón</label>
            <select class="form-control" id="cantones" name="Id_Canton_L" onchange="getDistritos(this.value);">
            </select>
        </div>
        <div class="col-lg-3 form-group distrito">
            <label for="distritos">Distrito</label>
            <select class="form-control" id="distritos" name="Id_Distrito_L"></select>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 form-group">
            <label for="">Dirección exacta de la propiedad</label>
            <input type="text" class="form-control"  autocomplete="off" name="DireccionExacta_L" value="" placeholder="Ingrese la Dirección exacta de la propiedad" />
        </div>
        <div class="col-lg-3 form-group">
            <label for="">Metros Cuadrados de la propiedad</label>
            <input type="number" class="form-control"  autocomplete="off" name="MetrosCuadradosLote_C" value="" placeholder="Ingrese la Cantidad" />
        </div>
        <div class="col-lg-3 form-group" id="MetrosCuadradosCasa_C">
            <label for="">Metros Cuadrados de la casa</label>
            <input type="number" class="form-control"  autocomplete="off" name="MetrosCuadradosCasa_C" value="" placeholder="Ingrese la Cantidad" />
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-lg-5 offset-lg-5">
            <input class="btn btn-secondary" type="submit" name="name" value="Cargar" />
        </div>
    </div>
    <input type="text" hidden name="NombreProvincia_L" id="1" value="" />
    <input type="text" hidden name="NombreCanton_L" id="2" value="" />
    <input type="text" hidden name="NombreDistrito_L" id="3" value="" />
}


<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD3cOQNB4cQjQDSGWiB_nT2H2pEOuD3w60&callback=initMap" async defer></script>
