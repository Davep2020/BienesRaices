
@{
    ViewBag.Title = "Propiedades";
    Layout = "~/Views/Shared/_LayoutPropiedad.cshtml";
}
<form action="/" method="post">
    <div class="row">
        <div class="col-lg-3 form-group">
            <label for="">Nombre de la propiedad</label>
            <input type="text" class="form-control" name="nombre" value="" placeholder="Ingrese el nombre de la propiedad" />
        </div>
        <div class="col-lg-3 form-group">
            <label for="">Precio de la Propiedad</label>
            <input type="text"  class="form-control" name="precio" value="" placeholder="Ingrese el Precio de la Propiedad" />
        </div>
        <div class="col-lg-3 form-group">
            <label>Cantidad de Cuartos</label>
            <select class="form-control">
                <option value="">Seleccione la cantidad</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
            </select>
        </div>
        <div class="col-lg-3 form-group">
            <label>Cantidad de Baños</label>
            <select class="form-control">
                <option value="">Seleccione la cantidad</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 form-group ">
            <label>Cantidad de Garajes</label>
            <select class="form-control">
                <option value="">Seleccione la cantidad</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
        </div>
        <div class="col-lg-2 offset-lg-1 form-group">
            <label>Cargar Imagen</label>
            <input class="form-control-file border" type="file" name="name" value="" />
        </div>
        <div class="col-lg-3 offset-lg-3 form-group">
            <label>Categoria de la propiedad</label>
            <select class="form-control">
                <option value="">Seleccione la Categoria</option>
                <option value="1">Venta</option>
                <option value="2">Alquiler</option>
            </select>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-lg-5 offset-lg-5">
            <input class="btn btn-secondary" type="submit" name="name" value="Cargar" />
        </div>
    </div>


</form>
