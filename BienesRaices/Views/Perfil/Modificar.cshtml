@model BienesRaices.Models.RetornaCuentaID_Result
@{
    ViewBag.Title = "Modificar";
    Layout = "~/Views/Shared/_LayoutPropiedad.cshtml";
}

<form id="frmModificaCuenta" method="post">

    <div class="container">

        <h2 class="text-center mt-4 mb-5">Cambiar contraseña</h2>

        <div class="row text-center">
            <div class="col col-2"></div>
            <div class="col col-8 text-center">
                <div class="form-control form-control-lg">
                    <label>Usuario</label>
                    @*<span>@Model.Usuario_CR</span>*@
                    <input type="text" name="Id_Credenciales_CR" id="Id_Credenciales_CR" value="@Model.Usuario_CR" class="form-control text-center text-muted" disabled />
                </div>

                <div class="form-control form-control-lg">
                    <label>Contraseña</label>
                    <input type="text" name="Contrasena_CR" id="Contrasena_CR" class="form-control text-center" value="@Model.Contrasena_CR" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Modificar" id="btnModificar" class="btn btn-success btn-lg btn-block mt-4" />
                </div>
            </div> 
            <div class="col col-2"></div>
        </div>
    </div>
    
</form>


@section scripts{
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/Validaciones/IngresarCuenta.js"></script>
}
